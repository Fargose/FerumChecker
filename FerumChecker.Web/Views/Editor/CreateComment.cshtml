
@model ComputerAssemblyViewModel.CommentViewModel 
@{
    ViewData["Title"] = "CreateComment";
}

    <form asp-action="CreateComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" hidden>
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="ComputerAssemblyId" class="control-label"></label>
            <input asp-for="ComputerAssemblyId" class="form-control" />
            <span asp-validation-for="ComputerAssemblyId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="control-label"></label>
            <textarea asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Зберегти" class="btn btn-primary" />
        </div>
    </form>

