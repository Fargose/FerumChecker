@model IEnumerable<FerumChecker.Service.DTO.Hardware.RecomendationDTO>


@foreach (var item in Model)
{
    <div class="catalog-item" data-id="@item.Id" data-type="@item.Type" data-image="@(Model != null && item.ImagePath !=null ? item.ImagePath : "/Images//not-found.png" )" data-name="@item.Name">
        <div class="catalog-item-block" style="width: 30%; float: left">
            <img src="@(Model != null && item.ImagePath !=null ? item.ImagePath : "/Images//not-found.png" )" style="max-width:45px;margin-top: 4px; margin-bottom: 4px;" />
        </div>
        <div class="catalog-item-block" style="width: 70%;float: right">
            <div class="item-name">
                @item.Display : @item.Name
            </div>
        </div>
    </div>
}
