@model FerumChecker.Web.ViewModel.Search.SoftwareSearchModel
<div class="Software-search-container">
    <div>
        <form>
            <div class="form-group" hidden>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" class="form-control" asp-items="ViewBag.Publishers">
                    <option selected>Оберіть</option>
                </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeveloperId" class="control-label"></label>
                <select asp-for="DeveloperId" class="form-control" asp-items="ViewBag.Developers">
                    <option selected>Оберіть</option>
                </select>
                <span asp-validation-for="DeveloperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Фільтрувати" class="btn btn-primary search" />
            </div>
        </form>
    </div>
</div>