@model FerumChecker.Web.ViewModel.Search.OuterMemorySearchModel
<div class="CPU-search-container">
    <div>
        <form>
            <div class="form-group" hidden>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinPrice" class="control-label"></label>
                <input asp-for="MinPrice" class="form-control" />
                <span asp-validation-for="MinPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPrice" class="control-label"></label>
                <input asp-for="MaxPrice" class="form-control" />
                <span asp-validation-for="MaxPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinVolume" class="control-label"></label>
                <input asp-for="MinVolume" class="form-control" />
                <span asp-validation-for="MinVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxVolume" class="control-label"></label>
                <input asp-for="MaxVolume" class="form-control" />
                <span asp-validation-for="MaxVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.Manufacturers">
                    <option selected>Оберіть</option>
                </select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Фільтрувати" class="btn btn-primary search" />
            </div>
        </form>
    </div>
</div>